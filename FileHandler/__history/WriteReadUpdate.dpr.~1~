program WriteReadUpdate;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
  fichier: Text;
begin
  Assign(fichier, 'test.txt');  { Associe un fichier à la variable }
  Rewrite(fichier);             { Crée un nouveau fichier }

  Writeln(fichier, 'Bonjour, ceci est une ligne de texte.');
  Writeln(fichier, 'Deuxième ligne.');

  Close(fichier);               { Ferme le fichier }
end.
